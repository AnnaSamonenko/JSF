<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence" version="2.0">

    <persistence-unit name="Share">
        <class>enteties.Share</class>
        <class>dao.ShareDAO</class>
        <class>dao.ShareDAOimpl</class>
        <class>enteties.Buyer</class>
        <class>dao.BuyerDAO</class>
        <class>dao.BuyerDAOimpl</class>
        <properties>
            <property name="javax.persistence.jdbc.driver" value="com.mysql.jdbc.Driver"/>
            <property name="javax.persistence.jdbc.user" value="root"/>
            <property name="javax.persistence.jdbc.password" value="root"/>
            <property name="javax.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/shares?useSSL=false"/>
        </properties>
    </persistence-unit>
</persistence>
